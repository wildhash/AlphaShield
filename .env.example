# AlphaShield Environment Variables
# Copy this file to .env and fill in your credentials

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/alphashield?retryWrites=true&w=majority

# Voyage AI API key for embeddings
VOYAGE_API_KEY=pa-your-voyage-api-key-here

# Optional AI APIs (for future enhancements)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Trading Configuration (Q1 Milestone 1)
# =============================================================================
# Alpaca Trading API
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_PAPER=true  # Set to false for live trading (BE CAREFUL!)
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Interactive Brokers
IBKR_HOST=127.0.0.1
IBKR_PORT=7497  # 7497 for TWS paper, 4001 for Gateway paper
IBKR_CLIENT_ID=1
IBKR_ACCOUNT=your-account-id

# =============================================================================
# Vector Database Configuration (Q1 Milestone 2)
# =============================================================================
# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment  # e.g., us-west1-gcp

# MongoDB Vector Search (alternative to Pinecone)
MONGODB_VECTOR_SEARCH_ENABLED=false

# =============================================================================
# Quantum Computing Configuration (Q1 Milestone 3)
# =============================================================================
# D-Wave Quantum Annealer
QUANTUM=false  # Set to true to use quantum optimization
DWAVE_API_TOKEN=your_dwave_token_here

# =============================================================================
# RL Configuration
# =============================================================================
USE_RL=false
RL_LAMBDA=0.1

# =============================================================================
# Risk and Coverage Constraints
# =============================================================================
CR_FLOOR=1.30
MAX_WEIGHT=0.40
MIN_CASH=0.05
TURNOVER_CAP=0.20

# =============================================================================
# Spending Guard Thresholds
# =============================================================================
GUARD_MAD_THRESHOLD=3.0
GUARD_HIGH_MULTIPLIER=5.0
GUARD_CRITICAL_MULTIPLIER=7.0

# =============================================================================
# Monitoring & Observability (Q3 Milestone 6)
# =============================================================================
# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development  # development, staging, production

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# =============================================================================
# Application Configuration
# =============================================================================
# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# API Configuration (for future FastAPI endpoints)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_LIVE_TRADING=false  # IMPORTANT: Keep false until production-ready
ENABLE_QUANTUM_OPTIMIZATION=false
ENABLE_VECTOR_SEARCH=true

# =============================================================================
# Business Logic Configuration
# =============================================================================
# Loan Parameters
DEFAULT_INTEREST_RATE=8.0
DEFAULT_TERM_MONTHS=36
INVESTMENT_SPLIT=0.60  # 60% to investment, 40% to borrower
